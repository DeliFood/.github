<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.listCategory.ListCategoryFragment" >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item_list_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp" >

                <ImageView
                    android:id="@+id/image_list_category"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/title"
                    android:background="@drawable/ic_sotobetawi_background" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/text_list_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/blank"
                android:textStyle="bold"
                android:gravity="center_vertical" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>